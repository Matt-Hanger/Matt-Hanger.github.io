---
import Footer from "./footer.astro";
import Hero from "../components/hero.astro";
import Nav from "../components/nav.astro";

const { title, herotitle, herotext, heroimage } = Astro.props
---


<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Matt Hanger Portfolio</title>
  </head>
  <body>
    <div class="container">
      <Nav />
    </div>
    <Hero title={herotitle} subtitle={herotext} image={heroimage}/>
    <main>
        <h1 style="background-color: white;">{title}</h1>
      <slot />
    </main>
  </body>
  <Footer />
</html>

<style>
* {
  margin: 0;
  padding: 0;
  background-color: rgb(77, 77, 77);
}

body {
  font-family: sans-serif;
  font-size: 16px;
  line-height: 1.5
}

main {
  max-width: 60%;
  margin: 0 auto;
  padding: 2rem;
  background-color: white;
  height: 1000px;
  border-radius: 8px;
  margin-bottom: 50px;
  margin-top: 50px;
}
.container {
  display: flex; 
  flex-direction: row;
  gap: 20px;
  justify-content: flex-end;
  margin: 20px;
}
</style>


