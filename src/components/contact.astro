---
import waves from "../assets/images/waves.png";
import favicon from "../assets/images/favicon.png";
---

<div class="flex bg-orange-50">
  <div class="w-screen">
    <img class="object-fill w-screen -mt-1" src={waves} alt="waves" />
    <div
      id="contact"
      class="container flex justify-center mx-auto sm:max-w-[65%] max-w-[85%] mt-10"
    >
      <form
        class="w-full max-w-lg p-5 sm:px-20 px-5 bg-[#4d4d4d] rounded-lg"
        action="https://formsubmit.co/faf9536e4ab26587d3cbfdfba8883f05"
        method="POST"
      >
        <input type="text" name="_honey" style="display: none;" />
        <input type="hidden" name="_captcha" value="false" />

        <div class="flex flex-row justify-center sm:p-5 p-3">
          <h1
            class="text-orange-500 font-bold items-center lg:text-5xl text-4xl"
          >
            Get in Touch
          </h1>
          <img
            class="sm:h-4 sm:w-4 h-3 w-3 mt-[25px] sm:mt-[30px]"
            src={favicon}
          />
        </div>
        <div class="flex flex-wrap mb-6 gap-1">
          <div class="w-full mb-6">
            <label
              class="block uppercase tracking-wide text-orange-500 text-xs font-bold mb-2"
              for="grid-first-name"
            >
              First Name
            </label>
            <input
              class="appearance-none block w-full bg-orange-50 text-gray-700 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:outline-orange-500"
              id="grid-first-name"
              type="text"
              placeholder="John"
              name="Name"
              required
            />
          </div>
          <div class="w-full">
            <label
              class="block uppercase tracking-wide text-orange-500 text-xs font-bold mb-2"
              for="grid-last-name"
            >
              Last Name
            </label>
            <input
              class="appearance-none block w-full bg-orange-50 text-gray-700 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:outline-orange-500"
              id="grid-last-name"
              type="text"
              placeholder="Doe"
              name="LastÂ Name"
              required
            />
          </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-6">
          <div class="w-full px-3">
            <label
              class="block uppercase tracking-wide text-orange-500 text-xs font-bold mb-2"
              for="grid-password"
            >
              E-mail
            </label>
            <input
              class="appearance-none block w-full bg-orange-50 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:outline-orange-500"
              id="email"
              type="email"
              placeholder="example@email.com"
              name="Email"
              required
            />
          </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-6">
          <div class="w-full px-3">
            <label
              class="block uppercase tracking-wide text-orange-500 text-xs font-bold mb-2"
              for="grid-password"
            >
              Message
            </label>
            <textarea
              class="no-resize appearance-none block w-full bg-orange-50 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:outline-orange-500 h-48 resize-none"
              id="message"
              name="Message"
              required></textarea>
          </div>
        </div>
        <div class="md:flex md:items-center">
          <div class="md:w-1/3">
            <button
              class="shadow bg-orange-500 hover:bg-orange-50 hover:text-orange-500 focus:shadow-outline focus:outline-none text-orange-50 font-bold py-2 px-4 rounded"
              type="submit"
            >
              Send
            </button>
          </div>
          <div class="md:w-2/3"></div>
        </div>
      </form>
    </div>
  </div>
</div>
