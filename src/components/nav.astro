---
import linkedin from "../assets/images/linkedin.png";
import github from "../assets/images/github.png";
import resume from "../assets/images/resume.png";
import resumedoc from "../assets/documents/MattHanger_Resume.pdf";
---

<ul class="flex flex-row justify-end md:px-10 px-3 top-0 sticky">
  <li>
    <a
      class="flex rounded-lg duration-300 md:px-7 md:py-5 px-3 py-3 hover:bg-white"
      href="https://www.linkedin.com/in/matt-hanger-6212b1267/"
      target="_blank"
      ><img class="md:h-10 md:w-10 h-5 w-5" src={linkedin} alt="LinkedIn" /></a
    >
  </li>
  <li>
    <a
      class="flex rounded-lg duration-300 md:px-7 md:py-5 px-3 py-3 hover:bg-white"
      href="https://github.com/Matt-Hanger"
      target="_blank"
      ><img class="md:h-10 md:w-10 h-5 w-5" src={github} alt="GitHub" /></a
    >
  </li>
  <li>
    <a
      class="flex rounded-lg duration-300 md:px-7 md:py-5 px-3 py-3 hover:bg-white"
      href={resumedoc}
      target="_blank"
      ><img class="md:h-10 md:w-8 h-5 w-4" src={resume} alt="Resume" /></a
    >
  </li>
</ul>
